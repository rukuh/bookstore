extends layout

block content
  script(src='/javascripts/jquery-2.2.1.js')
  script(src='/javascripts/view.index.js')

  li
    input(id='search',name='search',type='text',value='')
  li
    select(id='filter')
      - var bookshelf = ['','All','Fantasy','Comedic Fiction', 'Erotica', 'Historical Fiction', 'Horror', 'Literary Fiction', 'New Adult', 'War/Military Fiction', 'Western', 'Women\'s Fiction','Mystery','Nonfiction','Romance','Science Fiction','Thriller','Young Adult']
      each book in bookshelf
        option(value=book) #{book}    

  h1= title
  p Welcome to #{title}
  .wrapper
    #bookshelf(class='carousel slide' data-ride='carousel')
